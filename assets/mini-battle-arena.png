<svg width="200" height="200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e74c3c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8e44ad;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f39c12;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d35400;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="200" height="200" fill="url(#gradient1)" rx="20"/>
  
  <!-- Arena floor -->
  <rect x="20" y="160" width="160" height="20" fill="#34495e" rx="5"/>
  
  <!-- Stick figure 1 (left) -->
  <g transform="translate(60,120)">
    <!-- Head -->
    <circle cx="0" cy="0" r="8" fill="#f1c40f" stroke="#2c3e50" stroke-width="2"/>
    <!-- Body -->
    <line x1="0" y1="8" x2="0" y2="30" stroke="#2c3e50" stroke-width="3"/>
    <!-- Arms -->
    <line x1="0" y1="15" x2="-12" y2="25" stroke="#2c3e50" stroke-width="2"/>
    <line x1="0" y1="15" x2="12" y2="20" stroke="#2c3e50" stroke-width="2"/>
    <!-- Legs -->
    <line x1="0" y1="30" x2="-8" y2="40" stroke="#2c3e50" stroke-width="2"/>
    <line x1="0" y1="30" x2="8" y2="40" stroke="#2c3e50" stroke-width="2"/>
  </g>
  
  <!-- Stick figure 2 (right) -->
  <g transform="translate(140,120)">
    <!-- Head -->
    <circle cx="0" cy="0" r="8" fill="#e67e22" stroke="#2c3e50" stroke-width="2"/>
    <!-- Body -->
    <line x1="0" y1="8" x2="0" y2="30" stroke="#2c3e50" stroke-width="3"/>
    <!-- Arms -->
    <line x1="0" y1="15" x2="-12" y2="20" stroke="#2c3e50" stroke-width="2"/>
    <line x1="0" y1="15" x2="12" y2="25" stroke="#2c3e50" stroke-width="2"/>
    <!-- Legs -->
    <line x1="0" y1="30" x2="-8" y2="40" stroke="#2c3e50" stroke-width="2"/>
    <line x1="0" y1="30" x2="8" y2="40" stroke="#2c3e50" stroke-width="2"/>
  </g>
  
  <!-- Combat effects -->
  <g opacity="0.7">
    <!-- Fireball -->
    <circle cx="100" cy="130" r="6" fill="url(#gradient2)"/>
    <circle cx="100" cy="130" r="3" fill="#fff"/>
    
    <!-- Action lines -->
    <line x1="80" y1="125" x2="90" y2="120" stroke="#fff" stroke-width="2" opacity="0.8"/>
    <line x1="85" y1="130" x2="95" y2="125" stroke="#fff" stroke-width="1" opacity="0.6"/>
    <line x1="115" y1="135" x2="125" y2="130" stroke="#fff" stroke-width="2" opacity="0.8"/>
  </g>
  
  <!-- Text -->
  <text x="100" y="25" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="white" text-anchor="middle">MINI BATTLE</text>
  <text x="100" y="195" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle" opacity="0.8">Arena</text>
</svg>